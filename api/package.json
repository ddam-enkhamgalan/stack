{
  "name": "api",
  "version": "1.0.0",
  "description": "Stack API",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "// Development": "",
    "dev": "tsx watch src/index.ts",
    "dev:docs": "npm run docs:serve & npm run dev",
    
    "// Build & Production": "",
    "build": "tsc && npm run copy:assets",
    "copy:assets": "cp -r src/messages/*.json dist/src/messages/",
    "start": "node dist/src/index.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run type-check",
    
    "// Code Quality": "",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "quality": "npm run format && npm run lint:fix && npm run type-check",
    
    "// Documentation": "",
    "docs:generate": "tsx src/scripts/generateOpenApiSchema.ts",
    "docs:serve": "tsx src/scripts/serveOpenApiDocs.ts",
    "docs:validate": "tsx src/scripts/validateOpenApiSchema.ts",
    "docs:build": "npm run docs:generate && npm run docs:validate && npm run build",
    
    "// Database": "",
    "db:init": "tsx ../scripts/database/init-database.ts",
    "db:reset": "tsx ../scripts/database/reset-database.ts",
    "db:setup": "npm run db:reset && npm run db:init",
    
    "// Testing": "",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:messages": "tsx ../scripts/api/test-messages.ts",
    "test:auth": "../scripts/testing/test-complete-auth.sh",
    "test:uuid": "../scripts/testing/test-uuid-auth.sh",
    "demo:reset": "../scripts/testing/demo-uuid-reset.sh"
  },
  "author": "Enkh",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.11.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
